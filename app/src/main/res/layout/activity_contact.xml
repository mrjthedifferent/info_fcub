<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.fcubd.info_fcub_mahfuz.navactivity.contactActivity"
    android:background="#DDE5EE">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Information"
                android:id="@+id/contact_text"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_logo"
                android:src="@drawable/logo"
                android:layout_below="@+id/contact_text"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="First Capital University, Chuadanga"
                android:textAlignment="center"
                android:id="@+id/contact_name"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_below="@+id/contact_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Campus:"
                android:id="@+id/campus_text"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/contact_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="Shahnaz Mansion,\nAlamdanga Road (Pouro College Para),\nChuadanga-7200 "
                android:id="@+id/campus_details"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_below="@+id/campus_text"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Telephone:"
                android:id="@+id/telephone_text"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/campus_details"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="+88076164199"
                android:id="@+id/telephone_details2"
                android:padding="5dp"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/telephone_text"
                android:layout_alignRight="@+id/campus_details"
                android:layout_alignEnd="@+id/campus_details" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="+88076162722"
                android:id="@+id/telephone_details1"
                android:padding="5dp"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/telephone_text"
                android:layout_alignLeft="@+id/campus_details"
                android:layout_alignStart="@+id/campus_details" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mobile:"
                android:id="@+id/mobile_text"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/telephone_details2"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="+8801967595429"
                android:id="@+id/mobile_details1"
                android:padding="5dp"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/mobile_text"
                android:layout_alignLeft="@+id/campus_details"
                android:layout_alignStart="@+id/campus_details" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="+8801983278199 "
                android:id="@+id/mobile_details2"
                android:padding="5dp"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/mobile_text"
                android:layout_alignRight="@+id/campus_details"
                android:layout_alignEnd="@+id/campus_details" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Email:"
                android:id="@+id/email_text"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mobile_details2"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="info@fcubd.net"
                android:id="@+id/email_details1"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/email_text"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="first_capital_bd@yahoo.com "
                android:id="@+id/email_details2"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/email_details1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Find Main Campus:"
                android:id="@+id/map_text"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/email_details2"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                android:text="Click to show Map"
                android:id="@+id/map_details"
                android:textAlignment="center"
                android:theme="@style/mrjbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/map_text"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
