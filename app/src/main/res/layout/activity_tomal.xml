<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.fcubd.info_fcub_mahfuz.teaching.cse.tomalActivity"
    android:background="#DDE5EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Personal Information"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tomal"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khandaker Takdir Ahmed\nDepartment of CSE\nFirst Capital University of Bangladesh, Chuadanga."
                android:id="@+id/t2"
                android:layout_below="@+id/i1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:id="@+id/s0000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call:  +88 01943607369"
                android:textAllCaps="false"
                android:id="@+id/shafiqcall"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mobile"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/shafiqcall"
                android:layout_toStartOf="@+id/shafiqcall" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: not available"
                android:textAllCaps="false"
                android:id="@+id/shafiqemail"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mobile"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/shafiqemail"
                android:layout_toStartOf="@+id/shafiqemail" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Academic Qualifications:"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/s0000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Available"
                android:layout_below="@+id/s0000"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Research Interest:"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/s0000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Available"
                android:layout_below="@+id/s0000"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experiences:"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/s0000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Available"
                android:layout_below="@+id/s0000"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

        </RelativeLayout>




    </LinearLayout>

</ScrollView>
