<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.fcubd.info_fcub_mahfuz.office.vcActivity"
    android:background="#DDE5EE">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Personal Information"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:padding="15dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView3"
                android:layout_below="@id/textView2"
                android:src="@drawable/vc"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor Dr.M. Obaidul Islam Joarder\nVice-Chancellor\nFirst Capital University of Bangladesh, Chuadanga."
                android:id="@+id/textView5"
                android:layout_below="@+id/imageView3"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call:  +88  076163899"
                android:textAllCaps="false"
                android:id="@+id/b1"
                android:background="@android:color/transparent"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone"
                android:layout_toStartOf="@+id/b1"
                android:layout_toLeftOf="@+id/b1"
                android:layout_below="@+id/textView5"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"/>








        </RelativeLayout>

    </ScrollView>




</RelativeLayout>
