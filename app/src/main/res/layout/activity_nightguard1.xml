<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.fcubd.info_fcub_mahfuz.office.nightguard1Activity"
    android:background="#DDE5EE">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Personal Information"
                android:textStyle="bold"
                android:id="@+id/t1"
                android:padding="15dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/i1"
                android:layout_below="@id/t1"
                android:src="@drawable/noimage"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Md. Santu Rahman\nNight Guard\nFirst Capital University of Bangladesh, Chuadanga."
                android:id="@+id/t2"
                android:layout_below="@+id/i1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call:  +88 01918704746"
                android:textAllCaps="false"
                android:id="@+id/b19"
                android:background="@android:color/transparent"
                android:layout_below="@+id/t2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mobile"
                android:layout_toStartOf="@+id/b19"
                android:layout_toLeftOf="@+id/b19"
                android:layout_below="@+id/t2"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
