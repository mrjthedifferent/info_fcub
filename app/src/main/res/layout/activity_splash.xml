<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <net.fcubd.info_fcub_mahfuz.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:src="@drawable/logo" />


    <net.fcubd.info_fcub_mahfuz.RobotoTextView
        android:id="@+id/welcome_text"
        style="@style/TextViewAppearance.Headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagelogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.0"
        android:textStyle="bold"
        android:text="First Capital University"
        android:textColor="@android:color/holo_blue_dark" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/welcome_text"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/developer"
        style="@style/TextViewAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alpha="0.0"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Developed By: MRJ - CSE, 9th Batch"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>