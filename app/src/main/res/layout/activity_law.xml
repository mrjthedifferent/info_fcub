<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.fcubd.info_fcub_mahfuz.teaching.law.lawActivity"
    android:background="#028FD1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuhin Ahmed\nLecturer"
            android:textAllCaps="false"
            android:id="@+id/tuhin"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Md. Billal Hossain\nLecturer"
            android:textAllCaps="false"
            android:id="@+id/billal"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:layout_marginBottom="5dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Md. Mehedi Hasan\nLecturer"
            android:textAllCaps="false"
            android:id="@+id/mehedi"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sultana Sakhy\nLecturer"
            android:textAllCaps="false"
            android:id="@+id/sultana"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black" />

    </LinearLayout>
</ScrollView>
